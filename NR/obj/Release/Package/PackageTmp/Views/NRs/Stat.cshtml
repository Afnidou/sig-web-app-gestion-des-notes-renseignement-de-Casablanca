
@{
    ViewBag.Title = "Stat";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Les statistiques</title>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.1.1/chart.min.js"></script>

</head>
<body>
    <div style=" width: 100%; height: 40px">
        <h1 style="padding-left: 40%">                     Les statistiques</h1>
    </div>
    @*<div style="font-size:25px; padding: 10px">
            @Html.ActionLink(" ⏪ Retour", "CarteNR")
        </div>*@
    <div id="container" width="60%" height="70%">
        <canvas id="myChart" width="150" height="60"></canvas>
    </div>
    <br />
    <p>

        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
</html>
<script>
    var myContext = document.getElementById("myChart");
    var myChartConfig = {
        type: 'bar',
        data: {
            labels: ["non traité", "en cours de traitement", "Délivré"],
            datasets:
                [{
                    label: "Etats de traitements de notes de renseigenement",
                    data: [@ViewBag.non, @ViewBag.en, @ViewBag.de],
                    backgroundColor: ['red', 'yellow', 'green']

                }]

        }

    }

    var myChart = new Chart(myContext, myChartConfig);
</script>

